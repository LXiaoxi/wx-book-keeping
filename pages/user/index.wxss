/* pages/user/index.wxss */
.top {
    display: flex;
    flex-direction: column;
    height: 400rpx;
    background-color: #ffdc2e;
    align-items: center;
}

.top .avatar {
    width: 100rpx;
    height: 100rpx;
    margin-top: 80rpx;
}

.top .avatar .img {
    width: 100%;
    height: 100%;
}

.top .info {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 45rpx;
}

.top .info .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20rpx 60rpx;
}